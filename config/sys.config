[
  {ft12_sniffer, [
    {sniffer,
      #{
        master => #{
          transport => #{
            type => serial,
            name => "/dev/ttyUSB0",
            baudrate => 9600,
            parity => 0,
            stopbits => 1,
            bytesize => 8
          }
        },
        slave => #{
          transport => #{
            type => serial,
            name => "/dev/ttyUSB0",
            baudrate => 9600,
            parity => 0,
            stopbits => 1,
            bytesize => 8
          }
        },
        parser_settings => #{
          information_object_address_size => 24,
          originator_address_size => 0,
          common_address_size => 8
        }
      }
    }
  ]},
  {kernel, [
    {logger_level, debug},
    {logger, [
      {handler, console, logger_std_h, #{level => debug}},
      {handler, info, logger_std_h, #{
        level => info,
        formatter => {logger_formatter, #{}},
        config => #{
          file => "logs/console.log",
          max_no_bytes => 1073741824, % 1GB
          max_no_files => 1
        }
      }},
      {handler, error, logger_std_h, #{
        level => error,
        formatter => {logger_formatter, #{}},
        config => #{
          file => "logs/error.log",
          max_no_bytes => 1073741824, % 1GB
          max_no_files => 1
        }
      }},
      {handler, debug, logger_std_h, #{
        level => debug,
        config => #{
          file => "logs/debug.log",
          max_no_bytes => 1073741824, % 1GB
          max_no_files => 1
        }
      }}
    ]}
  ]}
].