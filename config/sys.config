[
  {kernel, [
    {logger_level, debug},
    {logger, [
      {handler, console, logger_std_h, #{level => emergency}},
      {handler, info, logger_std_h, #{
        level => info,
        formatter => {logger_formatter, #{}},
        config => #{
          file => "logs/console.log",
          max_no_bytes => 104857600, % 100 MB
          max_no_files => 100
        }
      }},
      {handler, error, logger_std_h, #{
        level => error,
        formatter => {logger_formatter, #{}},
        config => #{
          file => "logs/error.log",
          max_no_bytes => 104857600, % 100 MB
          max_no_files => 100
        }
      }},
      {handler, debug, logger_std_h, #{
        level => debug,
        config => #{
          file => "logs/debug.log",
          max_no_bytes => 104857600, % 100 MB
          max_no_files => 100
        }
      }}
    ]}
  ]}
].